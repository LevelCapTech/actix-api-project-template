{
  "openapi": "3.0.0",
  "info": {
    "title": "Actix Web API",
    "version": "1.0.0",
    "description": "Actix Web を使ったシンプルなAPI"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:8080",
      "description": "ローカルサーバー"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "メインエンドポイント",
        "description": "シンプルなJSONレスポンスを返します。",
        "operationId": "getIndex",
        "responses": {
          "200": {
            "description": "成功レスポンス",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Hello, Actix!"
                    },
                    "code": {
                      "type": "integer",
                      "example": 200
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
